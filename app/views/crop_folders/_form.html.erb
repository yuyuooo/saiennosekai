<%= form_with model: crop_folder, local:true do |f| %>
  <div class="form-group row form-inline mb-4">
    <%= f.label :crop_name, class: "col-sm-3" %>
    <%= f.text_field :crop_name, class: 'form-control' %>
  </div>
  <div class="form-group row form-inline mb-4">
    <%= f.label :new_crop_date, class: "col-sm-3"  %>
    <%= f.date_field :new_crop_date, class: 'form-control' %>
  </div>
  <div class="form-group row form-inline mb-4">
    <%= f.label :place, class: "col-sm-3"  %>
    <%= f.select :place, ['畑', '庭', '屋上・ベランダ', '屋内', 'その他'], { include_blank: '選択してください'}, { class: 'form-control'}%>
  </div>
  <div class="form-group row form-inline mb-4">
    <%= f.label :crop_image, class: "col-sm-3"  %>
    <%= f.file_field :crop_image, class: "form-control-file", accept: 'image/*', style: "width: 70%" %>
  </div>
  <div class="form-group row form-inline mb-4">
    <%= f.label :memo, class: "col-sm-3"%>
    <%= f.text_area :memo, class: 'form-control'%>
  </div>
  <div class="form-group row form-inline mb-4">
    <%= f.label :is_active, class: "col-sm-3" %></br>
    <%= f.radio_button :is_active, :true %>
    <%= f.label :is_active, "栽培中", value: :true, class: 'mr-3' %>
    <%= f.radio_button :is_active, :false %>
    <%= f.label :is_active, "栽培完了", value: :false %>
  </div>
  <div class="form-group row form-inline mb-4">
    <%= f.label :is_published_flag, class: "col-sm-3" %></br>
    <%= f.radio_button :is_published_flag, :true %>
    <%= f.label :is_published_flag, "公開", value: :true, class: 'mr-3' %>
    <%= f.radio_button :is_published_flag, :false %>
    <%= f.label :is_published_flag, "非公開", value: :false %>
  </div>
  <div class="form-group row col-sm-2 offset-sm-3 mb-5">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>