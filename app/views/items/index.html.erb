<div class="container">
  <div class="row">
    <div class="col-md-5">
      <%= render 'layouts/errors', obj: @item %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-5">
      <%= form_with model: @item, local:true do |f| %>
        <div class="form-group row form-inline mb-4">
          <%= f.label :item_name, class: "col-sm-3" %>
          <%= f.text_field :item_name, class: 'form-control' %>
        </div>
        <div class="form-group row form-inline mb-4">
          <%= f.label :item_count, class: "col-sm-3" %>
          <%= f.text_field :item_count, placeholder: '1 ~ 入力可能', class: 'form-control mr-2', style: "width: 40%" %>個
        </div>
        <div class="form-group row form-inline mb-4">
          <%= f.label :price, class: "col-sm-3" %>
          <%= f.text_field :price, placeholder: '0 ~ 入力可能', class: 'form-control mr-2', style: "width: 40%" %><sapan> 円</span>
        </div>
        <div class="form-group row form-inline mb-4">
          <%= f.label :item_image, class: "col-sm-3" %>
          <%= f.file_field :item_image, class: "form-control-file", accept: 'image/*', style: "width: 60%" %>
        </div>
        <div class="form-group row form-inline mb-4">
          <%= f.label :sales_method, class: "col-sm-3" %>
          <%= f.select :sales_method, ['取りに来てもらう', '配送'], { include_blank: '選択してください'},  class: 'form-control' %>
        </div>
        <div class="form-group row form-inline mb-4">
          <%= f.label :sales_area, class: "col-sm-3" %>
          <%= f.text_field :sales_area, placeholder: '市町村まで入力', class: "form-control" %>
        </div>
        <div class="form-group row form-inline mb-4">
          <%= f.label :introduction, class: "col-sm-3" %>
          <%= f.text_area :introduction, class: 'form-control' %>
        </div>
        <div class="form-group row form-inline mb-4">
          <%= f.label :is_active, class: "col-sm-3" %>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", value: :true, class: 'mr-3' %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", value: :false %>
        </div>
        <div class="form-group row col-sm-2 offset-sm-3">
          <%= f.submit "出品する", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="co-md-6 offset-md-1">
      <% @items.each do |item| %>
        <%= link_to user_about_path(item.user) do %>
          <%= image_tag item.user.get_profile_image(80,80) %>
        <% end %>
        <%= link_to "#{item.user.name}さん家の作物", user_path(item.user) %>
        <div class="row">
          <div class="item_container mb-4">
            <table class="table item_box col-md-9">
              <tr>
                <td width="35%"><%= item.item_name %></td>
                <td width="65%"><%= item.item_count %> 個</td>
              </tr>
              <tr>
                <td><%= item.price.to_s(:delimited) %> 円</td>
                <td>(１つあたり<%= (item.price.div(item.item_count)).to_s(:delimited) %>円 ) </td>
              </tr>
              <tr>
                <th>地域：</th>
                <td><%= item.sales_area %></td>
              </tr>
              <tr>
                <th>受渡：</th>
                <td><%= item.sales_method %></td>
              </tr>
              <tr>
                <th>説明：</th>
                <td class="long_text"><%= item.introduction %></td>
              </tr>
            </table>
            <div class="col-md-3 item_image">
              <div class="sales_status <%= item.is_active_color %>"><%= item.is_active ? "販売中" : "販売停止中" %></div>
              <div><%= image_tag item.get_item_image(170,170) %></div>
              <% if item.user == current_user %>
                <%= link_to "編集", edit_item_path(item) %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>