<% if user_signed_in? %>
  <%= form_with(url: search_path, local: true, method: :get, class: "search_form") do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select([['ユーザー','User'],['作物','CropFolder'],['商品','Item']]) %>
    <%= button_tag :type => "submit", :class =>"btn btn-warning btn-sm" do %>
      <i class="fa fa-search" style="color: gray;"></i>
    <% end %>
  <% end %>
<% end %>