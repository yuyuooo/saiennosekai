<h4>会員情報</h4>
<div class="user_image">
    <%= image_tag user.get_profile_image(150,150), class: "user_about_image" %>
</div>
<table class="table mt-3">
  <% if current_user != user %>
    <%= link_to chat_path(user.id), class: "btn btn-submit btn-sm ml-5" do %>
      <i class="fas fa-envelope"></i><br>
      メッセージ
    <% end %>
  <% end %>
  <tr>
    <th style="width: 40%">名前</th>
    <td style="width: 60%"><%= user.name %></td>
  </tr>
  <tr>
    <th style="width: 40%">自己紹介</th>
    <td style="width: 60%" class="long_text"><%= user.introduction %></td>
  </tr>
  <tr>
    <th style="width: 40%">作物いいね</th>
    <td id="user_info_favorites_count" data-user-id="<%= user.id %>" class="favorites_count" style="width: 60%">
      <% if user == current_user %>
        <%= render 'favorites/count', user: user %>
      <% else %>
        <strong><i class="fas fa-heart"></i></strong><span>　</span><%= link_to "#{user.favorites.count} 件", user_favorites_path(user) %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th style="width: 40%">商品気になる</th>
    <td id="user_info_likes_count" data-user-id="<%= user.id %>" class="likes_count" style="width: 60%">
      <% if user == current_user %>
        <%= render 'likes/count', user: user %>
      <% else %>
        <strong><i class="fas fa-star"></i></strong><span>　</span><%= link_to "#{user.likes.count} 件", user_likes_path(user) %>
      <% end %>
    </td>
  </tr>
</table>
<% if current_user == user %>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block mb-4" do %>
    <i class="fas fa-user-cog"></i> 会員情報編集
  <% end %>
<% end %>
<div class="about_crop_image"></div>