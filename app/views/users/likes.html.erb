<div class = "container">
  <div class ="row">
    <div class="col-md-10 offset-md-1 col-lg-5 offset-lg-0 col-xl-4 mb-3 info_box">
      <%= render "info", user: @user %>
    </div>
    <div class="col-lg-5 col-xl-4 info_temporary_box">
    </div>
    <div class="col-md-10 offset-md-1 col-lg-6 offset-lg-1 col-xl-6 offset-xl-2 mb-5">
      <h5>気になる商品一覧</h5>
      <% if @user.likes.length > 0 %>
        <%= render "items/index", items: @like_list %>
      <% else %>
        <p>=== 「気になる」した商品はありません ===</p>
      <% end %>
    </div>
  </div>
</div>