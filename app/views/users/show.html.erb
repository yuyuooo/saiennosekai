<div class="container">
  <div class="row">
    <div class="col-md-5">
      <% if @user == current_user %>
        <p>新しい作物の栽培を登録</p>
        <%= render 'layouts/errors', obj: @crop_folder%>
        <%= form_with model: @crop_folder, local:true do |f| %>
          <div class="form-group">
            <%= f.label :crop_name %>
            <%= f.text_field :crop_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :new_crop_date %>
            <%= f.date_field :new_crop_date, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :place %>
            <%= f.select :place, ['畑', '庭', '屋上・ベランダ', '屋内', 'その他'], { include_blank: '選択してください'}, { class: 'form-control'} %>
          </div>
          <div class="form-group">
            <%= f.label :crop_image %>
            <%= f.file_field :crop_image, class: "form-control-file", accept: 'image/*' %>
          </div>
          <div class="form-group">
            <%= f.label :memo %>
            <%= f.text_area :memo, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.submit class: 'btn btn-success' %>
          </div>
        <% end %>
      <% else %>
        <%= render "info" %>
      <% end %>
    </div>
    <div class="col-md-6 offset-md-1">
      <%= render 'crop_folders/index', crop_folders: @crop_folders %>
    </div>
  </div>
</div>

