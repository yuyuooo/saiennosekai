<div class="container">
  <div class="col-xs-12">
  <h5>会員一覧</h5>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>名前</th>
          <th>Email</th>
          <th>作物件数</th>
          <th>出品件数</th>
          <th>入会状況</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= link_to edit_admin_user_path(user) do %>
                  <%= image_tag user.get_profile_image(70,70) %>
                <% end %>
            </td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to user.crop_folders.count, admin_user_path(user) %></td>
            <td><%= user.items.count %></td>
            <td class="<%= user.is_active_color %>"><%= user.is_active ? "有効" : "退会" %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= paginate @users %>
  </div>
</div>