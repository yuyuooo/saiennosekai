<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h5 class="text-center">会員一覧</h5>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table mb-4">
        <thead>
          <tr>
            <th></th>
            <th>名前</th>
            <th>Email</th>
            <th>作物件数</th>
            <th>出品件数</th>
            <th>入会状況</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td><%= link_to edit_admin_user_path(user) do %>
                    <%= image_tag user.get_profile_image(70,70) %>
                  <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to user.crop_folders.count, admin_user_path(user) %></td>
              <td><%= link_to user.items.count, admin_user_items_path(user) %></td>
              <td class="<%= user.is_active_color %>"><%= user.is_active ? "有効" : "退会" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>