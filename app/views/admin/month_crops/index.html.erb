<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h5 class="text-center">今月のおすすめ栽培一覧</h5>
    </div>
    <div class="col-md-4 offset-md-2">
      <%= link_to new_admin_month_crop_path, class: "btn btn-info ml-5 mb-2" do %>
        <i class="fas fa-seedling"></i> 追加
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <table class="table mb-4">
        <thead>
          <tr>
            <th>月</th>
            <th>作物名</th>
            <th class="admin_min_invisiable">収穫月</th>
            <th class="admin_min_invisiable">投稿作成日</th>
            <th>公開状況</th>
            <th></th>
          </tr>
        </thead>
        <% @month_crops.each do |month_crop| %>
          <tbody>
            <tr>
              <td><%= month_crop.month %></td>
              <td><%= link_to admin_month_crop_path(month_crop) do %>
                    <%= month_crop.crop_name %></br>
                    <%= image_tag month_crop.get_crop_image(70,70) %>
                  <% end %>
              </td>
              <td class="admin_min_invisiable"><%= month_crop.harvest_time %></td>
              <td class="admin_min_invisiable"><%= month_crop.created_at.strftime('%Y-%m-%d') %></td>
              <td class="<%= month_crop.is_published_flag_color %>"><%= month_crop.is_published_flag ? "公開" : "非公開" %></td>
              <td><%= link_to "削除", admin_month_crop_path(month_crop), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %></td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
