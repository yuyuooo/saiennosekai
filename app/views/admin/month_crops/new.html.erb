<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h5>今月のおすすめ栽培作物を登録</h5>
      <%= form_with model:[:admin, @month_crop], local:true do |f| %>
        <div class="form-group">
          <%= f.label :month, "栽培開始月" %>
          <%= f.select :month, ['1月', '2月', '3月', '4月', '5月', '6月', '7月', '8月', '9月', '10月', '11月', '12月'], { include_blank: '選択してください'}, { class: 'form-control'}%>
        </div>
        <div class="form-group">
          <%= f.label :crop_name, "作物名" %>
          <%= f.text_field :crop_name, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :harvest_time, "収穫時期" %>
          <%= f.text_field :harvest_time, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :crop_image, "作物画像" %>
          <%= f.file_field :crop_image, class: "form-control-file", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "作物説明" %>
          <%= f.text_area :introduction, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :method, "栽培方法" %>
          <%= f.text_area :method, class: 'form-control'%>
        </div>
        <div class="form-group">
          <%= f.label :is_published_flag, "公開状況" %></br>
          <%= f.radio_button :is_published_flag, :true %>
          <%= f.label :is_published_flag, "公開", value: :true, class: 'mr-3' %>
          <%= f.radio_button :is_published_flag, :false %>
          <%= f.label :is_published_flag, "非公開", value: :false %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>