<div class='container'>
  <div class='row'>
    <% if user_signed_in? %>
      <div class='mx-auto footer_text'>
      	<p>©️ Let's enjoy cultivation!</p>
      </div>
      <ul class="footer_nav mx-auto my-auto pl-0">
        <li class="ml-0">
          <% if unchecked_notifications.any? %>
            <%= link_to notifications_path, class: "btn btn-secondary px-4" do %>
              <i class="fa fa-circle" style="color: gold;"></i><i class="fas fa-bell"></i>
            <% end %>
          <% else %>
            <%= link_to notifications_path, class: "btn btn-secondary px-4 ml-0" do %>
              <i class="fas fa-bell"></i>
            <% end %>
          <% end %>
        </li>
        <li>
          <%= link_to user_about_path(current_user), class: "btn btn-secondary px-4 ml-3" do %>
            <i class="fas fa-user"></i>
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user), class: "btn btn-secondary px-4 ml-3" do %>
            <i class="fas fa-seedling"></i>
          <% end %>
        </li>
        <li>
          <%= link_to items_path, class: "btn btn-secondary px-4 ml-3" do %>
            <i class="fas fa-store"></i>
          <% end %>
        </li>
      </ul>
    <% else %>
      <div class='mx-auto'>
      	<p>©️ Let's enjoy cultivation!</p>
      </div>
    <% end %>
  </div>
</div>